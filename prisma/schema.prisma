generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int           @id @default(autoincrement())
  uuid        String        @unique
  itemBarcode String        @unique
  name        String
  unit        String
  price       Int
  description String
  image       String
  categoryId  String
  Transaction Transaction[]
  category    Categories    @relation(fields: [categoryId], references: [name])
}

model Categories {
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Product   Product[]
}

model User {
  id          Int           @id @default(autoincrement())
  username    String        @unique
  email       String        @unique
  password    String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  Transaction Transaction[]
}

model Transaction {
  id                 Int                  @id @default(autoincrement())
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  quantity           Int
  productId          Int
  userId             Int
  product            Product              @relation(fields: [productId], references: [id])
  user               User                 @relation(fields: [userId], references: [id])
  TransactionDetails TransactionDetails[]
}

model TransactionDetails {
  id            Int         @id @default(autoincrement())
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  productPrice  Int
  subTotalPrice Int
  quantity      Int
  productId     Int
  transactionId Int
  transaction   Transaction @relation(fields: [transactionId], references: [id])
}
